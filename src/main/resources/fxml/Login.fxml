        <Button fx:id="loginButton" layoutX="334.0" layoutY="71.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="59.0" prefWidth="113.0" text="Login" />
        <ProgressIndicator fx:id="progressIndicator" layoutX="434.0" layoutY="74.0" AnchorPane.rightAnchor="14.0" />
