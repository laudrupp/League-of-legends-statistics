        </MenuBar>
        <Label layoutX="14.0" layoutY="42.0" text="Use existing profile" />
        <Label fx:id="label" layoutX="14.0" layoutY="76.0" minHeight="16" minWidth="69" text="Profile name:" />
        <Label fx:id="label1" layoutX="14.0" layoutY="110.0" minHeight="16" minWidth="69" text="Password:" />
        <Separator layoutX="7.0" layoutY="62.0" maxHeight="2.0" prefHeight="2.0" prefWidth="474.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="64.0" />
