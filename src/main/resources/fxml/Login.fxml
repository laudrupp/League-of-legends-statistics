<AnchorPane id="AnchorPane" fx:id="loginAnchorPane" prefHeight="215.0" prefWidth="527.0" stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ryhma10.tilastoohjelma.view.LoginController">
    <children>
