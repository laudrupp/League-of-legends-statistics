            <menus>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleCreateNewProfile" text="Create new profile..." />
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
                    </items>
                </Menu>
            <Menu fx:id="languageMenu" mnemonicParsing="false" text="Language">
               <items>
                  <CheckMenuItem fx:id="en_US" mnemonicParsing="false" onAction="#handleChangeLanguage" text="English (United States)" />
